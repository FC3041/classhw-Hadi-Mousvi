<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontSize="20">
    <Grid>
        <StackPanel HorizontalAlignment="left" x:Name="Items">
            <TextBlock x:Name="HiSection">Hello freind!</TextBlock>
            <StackPanel
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="250 50 0 0"
                >
                <Button 
                    Width="200" 
                    Height="70" 
                    Margin="10 20 0 20"
                    >
                    sdf
                </Button>
                <Button 
                    Width="120" 
                    Height="70"
                    Margin="10 0 10 0"
                    Click="onButtonClick"
                    x:Name="SecondButton"
                    >
                    Hello
                </Button>
                <Button>
                    <Button.Content>
                        Money
                    </Button.Content>
                </Button>
            </StackPanel>
            <TextBlock Text="Go touch some grass"/>
        </StackPanel>
    </Grid>
</Window>
